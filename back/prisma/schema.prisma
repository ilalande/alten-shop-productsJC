// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
    id              String      @id @default(cuid())
    jsonId          Int
    code            String   @unique
    name            String
    description     String
    image           String?
    price           Float
    category       Category 
    quantity        Int
    inventoryStatus InventoryStatus
    rating           Int

}

enum Category {
Accessories
Clothing
Fitness
Electronics
}

enum InventoryStatus {
INSTOCK
LOWSTOCK
OUTOFSTOCK
}
